<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color5_blue"
>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/setting_title"
        android:elevation="13dp"
        android:layout_height="55dp"
        android:background="@color/color5_blue"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_chevron_left_white_48dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="设置"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_music"
        android:layout_below="@+id/setting_title"
        android:orientation="horizontal"
        android:background="@color/color4_blue"
        android:layout_width="match_parent"
        android:elevation="7dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌词与播放"
            android:paddingLeft="20dp"
            android:textColor="@color/color_text"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_below="@+id/setting_music"
        android:orientation="horizontal"
        android:background="@color/color3_blue"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="45dp"
        android:id="@+id/relativeLayout4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="锁屏歌词"
            android:paddingLeft="20dp"
            android:textColor="@color/color_text"
            android:textSize="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:paddingRight="20dp"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:background="@color/color3_blue"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="45dp"
        android:layout_below="@+id/relativeLayout4"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桌面歌词"
            android:paddingLeft="20dp"
            android:textColor="@color/color_text"
            android:textSize="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch2"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:background="@color/color3_blue"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="45dp"
        android:layout_below="@+id/relativeLayout5"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自动进入播放页"
            android:paddingLeft="20dp"
            android:textColor="@color/color_text"
            android:textSize="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch3"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:background="@color/color3_blue"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="45dp"
        android:layout_below="@+id/relativeLayout6"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专辑封面自动旋转"
            android:paddingLeft="20dp"
            android:textColor="@color/color_text"
            android:textSize="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Switch
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch4"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:background="@color/color3_blue"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="45dp"
        android:layout_below="@+id/relativeLayout7"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桌面插件"
            android:paddingLeft="20dp"
            android:textColor="@color/color_text"
            android:textSize="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_chevron_right_grey600_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout8"
        android:orientation="horizontal"
        android:background="@color/color4_blue"
        android:layout_width="match_parent"
        android:elevation="7dp"
        android:layout_height="50dp"
        android:layout_below="@+id/relativeLayout9"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通用"
            android:paddingLeft="20dp"
            android:textColor="@color/color_text"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:background="@color/color3_blue"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="45dp"
        android:id="@+id/relativeLayout10"
        android:layout_below="@+id/relativeLayout8"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知"
            android:paddingLeft="20dp"
            android:textColor="@color/color_text"
            android:textSize="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_chevron_right_grey600_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:background="@color/color3_blue"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="45dp"
        android:id="@+id/relativeLayout11"
        android:layout_below="@+id/relativeLayout10"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="存储位置"
            android:paddingLeft="20dp"
            android:textColor="@color/color_text"
            android:textSize="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_chevron_right_grey600_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:background="@color/color3_blue"
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_height="45dp"
        android:id="@+id/relativeLayout12"
        android:layout_below="@+id/relativeLayout11"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐私设置"
            android:paddingLeft="20dp"
            android:textColor="@color/color_text"
            android:textSize="13dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/ic_chevron_right_grey600_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</RelativeLayout>
