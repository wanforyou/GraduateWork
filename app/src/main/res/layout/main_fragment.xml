<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginRight="30dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日最热"
        android:textSize="16dp"
        android:textColor="#5f000000"
        android:id="@+id/bottom_today_hot"
        android:clickable="true"
        android:layout_toStartOf="@+id/bottom_week_hot" />

    <TextView
        android:textSize="16dp"
        android:textColor="#66FF66"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本周最热"
        android:id="@+id/bottom_week_hot"
        android:clickable="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textSize="16dp"
        android:textColor="#5f000000"
        android:layout_marginLeft="30dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本月最热"
        android:id="@+id/bottom_month_hot"
        android:clickable="true"
        android:layout_toEndOf="@+id/bottom_week_hot" />
    </RelativeLayout>
    <GridView
        android:id="@+id/main_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </GridView>



</LinearLayout>