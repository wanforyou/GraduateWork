<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View
        style="@style/divider"
        />

    <include android:id="@+id/top_menu_himusic"
        layout="@layout/include_top_menu"></include>

    <View
        style="@style/divider"/>

    <com.tyut.himusic.view.AutoScrollViewPager

        android:id="@+id/frag_main_himusic_banner"
        android:layout_width="match_parent"
        android:layout_height="132dp"/>
    <View
        style="@style/divider"
        android:background="#2f000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/frag_main_himusic_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="音乐"
            android:textColor="#5f000000"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/frag_main_himusic_man"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="音乐人"
            android:textColor="#5f000000"
            android:textSize="16dp"
            />
    </LinearLayout>
    <View
        style="@style/divider"
        android:background="#2f000000"/>


    <FrameLayout
        android:id="@+id/frag_main_suggestion_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    </FrameLayout>



</LinearLayout>