<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragment.JAYZHOUFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ff9900"
        android:layout_height="192dp"
        android:id="@+id/relativeLayout20">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:src="@drawable/ic_chevron_left_white_36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周杰伦(Jay Chou)"
            android:id="@+id/textView10"
            android:textColor="@color/color_text"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView10" />
    </RelativeLayout>

    <com.tyut.himusic.ui.RevealLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:elevation="13dp"
        android:background="#ff9900"
        android:layout_below="@+id/relativeLayout20"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout4">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff3300"
            android:id="@+id/btn_music"
            android:textColor="@color/color_text"
            android:layout_weight="1"
            android:text="热门单曲"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff6600"
            android:id="@+id/btn_music_special"

            android:text="专辑"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff6600"
            android:id="@+id/btn_mv"

            android:text="MV"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff6600"
            android:layout_weight="1"
            android:id="@+id/btn_music_imformation"
            android:text="歌手信息"/>
    </com.tyut.himusic.ui.RevealLayout>

<FrameLayout
    android:id="@+id/frag_jayzhou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></FrameLayout>

</RelativeLayout>
