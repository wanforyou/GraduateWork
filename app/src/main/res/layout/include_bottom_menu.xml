<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true">

    <RadioButton
        android:id="@+id/include_bottom_ing"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:button="@null"
        android:gravity="center"
        android:padding="7dp"
        android:text="动态"
        android:textColor="#9f000000"
        android:textSize="20dp"


        />


    <RadioButton
        android:id="@+id/include_bottom_hivideo"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@color/bottom_white"
        android:button="@null"
        android:gravity="center"
        android:padding="7dp"
        android:text="Hi视"
        android:textColor="@color/text_color_bottom_grey"
        android:textSize="20dp"
        />

    <RadioButton
        android:id="@+id/include_bottom_suggestion"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@color/bottom_green"
        android:button="@null"
        android:gravity="center"
        android:padding="7dp"
        android:text="推荐"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />
    <RadioButton
        android:id="@+id/include_bottom_himusic"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:button="@null"
        android:gravity="center"
        android:padding="7dp"
        android:text="Hi乐"
        android:textColor="#9f000000"
        android:textSize="20dp"

        />



    <RadioButton
        android:id="@+id/include_bottom_mine"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:button="@null"
        android:gravity="center"
        android:padding="7dp"
        android:text="我的"
        android:textColor="#9f000000"
        android:textSize="20dp"
        />
</RadioGroup>

