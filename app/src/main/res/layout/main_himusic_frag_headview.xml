<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.tyut.himusic.view.AutoScrollViewPager

        android:id="@+id/frag_main_himusic_banner"
        android:layout_width="match_parent"
        android:layout_height="132dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/frag_main_himusic_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="音乐"
            android:textColor="#ffffff"
            android:background="@color/color2"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/frag_main_himusic_man"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="音乐人"
            android:textColor="#5f000000"
            android:textSize="16dp"
            />
    </LinearLayout>



    <FrameLayout
        android:id="@+id/frag_main_himusic_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



</LinearLayout>