<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        style="@style/divider"
        />

   <include android:id="@+id/top_menu_suggestion"
       layout="@layout/include_top_menu"></include>

    <View
        style="@style/divider"/>

    <com.tyut.himusic.view.AutoScrollViewPager

        android:id="@+id/frag_main_suggestion_banner"
        android:layout_width="match_parent"
        android:layout_height="132dp"/>

    <View
        style="@style/divider"
        android:background="#2f000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/frag_main_suggestion_today_hot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="今日最热"
            android:background="#29b6f6"
            android:textColor="#ffffff"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/frag_main_suggestion_week_hot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="本周最热"
            android:textColor="#5f000000"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/frag_main_suggestion_month_hot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="本月最热"
            android:textColor="#5f000000"
            android:textSize="16dp"
            />
    </LinearLayout>

    <View
        style="@style/divider"
        android:background="#2f000000"/>


    <FrameLayout
        android:id="@+id/frag_main_suggestion_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    </FrameLayout>


</LinearLayout>