<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/color3"
    tools:context="com.tyut.himusic.activity.MusicRunningActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/color4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout13">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:paddingLeft="8dp"
            android:id="@+id/muisc_running_back"
            android:src="@drawable/ic_chevron_left_white_48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:src="@drawable/ic_queue_music_white_48dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/muisc_list"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="giligilieye"
            android:textSize="23dp"
            android:id="@+id/musicTitle"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/music_pan"
        android:layout_below="@+id/relativeLayout13"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ekbarLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="珍爱生命远离毒品"
            android:textSize="16dp"
            android:paddingTop="16dp"
            android:id="@+id/musicArtis"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="200dp"
            android:layout_height="200dp"
            fresco:roundAsCircle="true"
            android:background="#4f000000"
            android:id="@+id/music_pan_pic"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ekbarLayout"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout14"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp">

        <SeekBar
            android:id="@+id/audioTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
/>


        <TextView
            android:id="@+id/current_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/audioTrack"
            android:text="0:25" />

        <TextView
            android:id="@+id/final_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/audioTrack"
            android:text="3:59" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <ImageView
            android:id="@+id/music_running_zan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="54dp"

            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_thumb_up_white_24dp"
             />
        <ImageView
            android:id="@+id/music_running_repeatState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_loop_white_24dp"
            />
        <ImageView
            android:id="@+id/music_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/ic_inbox_white_24dp"
            />
        <ImageView
            android:id="@+id/music_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_send_white_24dp"
            />
        <ImageView
            android:id="@+id/music_setting"
            android:src="@drawable/ic_equalizer_white_24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:id="@+id/relativeLayout14">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_music"
            android:src="@drawable/ic_pause_circle_outline_white_48dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previous_music"
            android:src="@drawable/ic_skip_previous_white_36dp"
            android:layout_marginEnd="46dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/play_music" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_music"
            android:src="@drawable/ic_skip_next_white_36dp"
            android:layout_marginStart="44dp"
            android:layout_alignTop="@+id/previous_music"
            android:layout_toEndOf="@+id/play_music" />
    </RelativeLayout>
</RelativeLayout>
