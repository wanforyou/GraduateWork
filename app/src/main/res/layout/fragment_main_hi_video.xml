<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include android:id="@+id/top_menu_hivideo"
        layout="@layout/include_top_menu">

    </include>




    <ImageView
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="#b3e5fc"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />


    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="原创"
            android:gravity="center"
            android:background="@drawable/bottom7dp"
            android:textSize="16dp"
            android:elevation="7dp"
            android:id="@+id/frag_hivideo_main"
            android:textColor="#ffffff"
            android:layout_weight="1" />
        <Button
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="16dp"
            android:text="现场"
            android:elevation="14dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:id="@+id/frag_hivideo_secene"
            android:textColor="#5f000000"  />
        <Button
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="MV"
            android:textSize="16dp"
            android:id="@+id/frag_hivideo_mv"
            android:textColor="#5f000000"
            android:layout_weight="1"
            android:background="#ffffff"
            android:elevation="14dp"
            />
        <Button
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="达人"
            android:textSize="16dp"
            android:id="@+id/frag_hivideo_man"
            android:textColor="#5f000000"
            android:layout_weight="1"
            android:background="#ffffff"
            android:elevation="14dp"
            />

    </LinearLayout>



    <FrameLayout
        android:id="@+id/frag_hivideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
</FrameLayout>


</LinearLayout>