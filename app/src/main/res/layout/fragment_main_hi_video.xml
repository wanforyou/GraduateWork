<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        style="@style/divider"/>

    <include android:id="@+id/top_menu_hivideo"
        layout="@layout/include_top_menu">

    </include>
    <View
        style="@style/divider"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:background="@drawable/shape"
        android:id="@+id/btn_updatevideo"
        android:text="上传视频"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/uplocate"
        android:paddingLeft="20dp"
        android:layout_margin="2dp"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="#3f000000"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />
    <View
        style="@style/divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原创"
            android:textSize="16dp"
            android:paddingRight="40dp"
            android:layout_toStartOf="@+id/hivideo_secene"
            android:id="@+id/hivideo_main"
            android:textColor="#66cc66"  />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="现场"
            android:layout_centerInParent="true"
            android:id="@+id/hivideo_secene"
            android:textColor="#5f000000"  />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MV"
            android:layout_toRightOf="@+id/hivideo_secene"
            android:textSize="16dp"
            android:paddingLeft="40dp"
            android:id="@+id/hivideo_mv"
            android:textColor="#5f000000"
            />

    </RelativeLayout>
    <View
        style="@style/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        >
        <TextView
            android:padding="5dp"
            android:id="@+id/hivideo_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="最热"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:background="#66cc66"
            android:textColor="#ffffff"
            />
        <TextView
            android:padding="5dp"
            android:id="@+id/hivideo_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="最新"
            android:textSize="16dp"
            android:layout_weight="1"
            android:textColor="#6f000000"
            />
    </LinearLayout>
    <View
        style="@style/divider"/>
    <fragment
        android:id="@+id/frag_hivideo_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></fragment>


</LinearLayout>