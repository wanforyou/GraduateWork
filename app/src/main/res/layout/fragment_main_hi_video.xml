<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        style="@style/divider"/>

    <include android:id="@+id/top_menu_hivideo"
        layout="@layout/include_top_menu">

    </include>
    <View
        style="@style/divider"
        android:background="#01579b"/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="#b3e5fc"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />
    <View
        style="@style/divider"
        android:layout_marginTop="2dp"
        android:background="#2f000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原创"
            android:background="#03a9f4"
            android:textSize="16dp"
            android:padding="10dp"
            android:id="@+id/frag_hivideo_main"
            android:textColor="#ffffff"  />
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="现场"
            android:padding="10dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:id="@+id/frag_hivideo_secene"
            android:textColor="#5f000000"  />
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MV"
            android:textSize="16dp"
            android:padding="10dp"
            android:id="@+id/frag_hivideo_mv"
            android:textColor="#5f000000"
            android:layout_weight="1"
            android:background="#ffffff"
            />
        <TextView
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="达人"
            android:textSize="16dp"
            android:padding="10dp"
            android:id="@+id/frag_hivideo_man"
            android:textColor="#5f000000"
            android:layout_weight="1"
            android:background="#ffffff"
            />

    </LinearLayout>
    <View
        style="@style/divider"
        android:background="#03a9f4"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            style="@style/divider"
            android:layout_height="7dp"
            android:background="#03a9f4"
            android:layout_width="50dp"
            android:layout_centerHorizontal="true"

            />

    <LinearLayout
        android:id="@+id/hivideo_hotandnew"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp"

        >

        <TextView
            android:padding="5dp"
            android:id="@+id/hivideo_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="最热"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:textColor="#8f000000"
            android:background="@drawable/shape1"
            />
        <TextView
            android:padding="5dp"
            android:id="@+id/hivideo_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="最新"
            android:textSize="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape2"
            android:textColor="#ffffff"
            />
    </LinearLayout>

</RelativeLayout>
    <View
        style="@style/divider"
        android:background="#2f000000"/>

    <FrameLayout
        android:id="@+id/frag_hivideo_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
</FrameLayout>


</LinearLayout>