<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:background="@color/color1_blue"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_frag_main_ing_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"

        android:layout_height="wrap_content"
        android:text="大小距离待调整"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_frag_main_ing_img"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/item_frag_main_ing_title"/>

    <TextView
        android:layout_margin="3dp"
        android:id="@+id/item_frag_main_ing_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5f000000"
        android:layout_below="@id/item_frag_main_ing_img"
        android:text="大小距离待调整"/>


    <TextView
        android:layout_margin="3dp"
        android:textColor="#5f000000"

        android:id="@+id/item_frag_main_ing_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_frag_main_ing_date"
        android:text="大小距离待调整"/>

    <ImageView
        android:layout_margin="3dp"

        android:id="@+id/item_frag_main_ing_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:src="@drawable/ic_launch_white_24dp"
        android:layout_below="@id/item_frag_main_ing_img"/>

    <ImageView
        android:layout_margin="3dp"

        android:src="@drawable/ic_thumb_up_white_24dp"
        android:layout_marginRight="12dp"
        android:id="@+id/item_frag_main_ing_dianzan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_frag_main_ing_img"
        android:layout_toLeftOf="@id/item_frag_main_ing_share"
        />
</RelativeLayout>