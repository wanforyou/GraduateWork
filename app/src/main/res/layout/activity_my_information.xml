<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/text_color_lightblue_4"
>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:elevation="7dp"
        android:background="@color/text_color_lightblue_4"
        android:id="@+id/relativeLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:src="@drawable/ic_chevron_left_white_48dp"
            android:layout_width="50dp"
            android:layout_height="40dp" />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_album_white_48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


        <com.tyut.himusic.view.CircleImageView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/my_information_head_img"
            android:src="@drawable/bottommenu7dp"
            app:border_color="#ffffff"
            />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/text_color_lightblue_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:elevation="13dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天秤座"
            android:textColor="#ffffff"
            android:layout_marginStart="164dp"
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="海南"
            android:textColor="#ffffff"
            android:id="@+id/textView3"
            android:layout_alignTop="@+id/textView2"
            android:layout_toEndOf="@+id/imageView2" />

        <ImageView
            android:src="@drawable/ic_pin_drop_white_48dp"
            android:layout_width="30dp"
            android:padding="5dp"
            android:layout_height="30dp"
            android:id="@+id/imageView2"
            android:layout_marginStart="28dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView2" />

        <ImageView
            android:src="@drawable/ic_brightness_7_white_48dp"
            android:layout_width="30dp"
            android:padding="5dp"
            android:layout_height="30dp"
            android:layout_marginEnd="38dp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/textView2" />
    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/relativeLayout2"
        android:background="@color/text_color_lightblue_4"
        android:id="@+id/relativeLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:id="@+id/textView4"
            android:layout_marginStart="106dp"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView4"
            android:layout_marginStart="56dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赞"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:id="@+id/textView6"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"
            android:layout_marginStart="46dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1331"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="310"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15689"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/text_color_lightblue_2"
        android:elevation="13dp"
        android:layout_below="@+id/relativeLayout3"
        android:id="@+id/linearLayout">
        <TextView
            android:layout_width="match_parent"
            android:text="历史"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center|right" />
        <TextView
            android:layout_width="match_parent"
            android:text="hi乐"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:text="hi视"
            android:gravity="left|center"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_lightblue_4"
    android:layout_below="@+id/linearLayout"
    android:layout_alignParentStart="true"></FrameLayout>

</RelativeLayout>
